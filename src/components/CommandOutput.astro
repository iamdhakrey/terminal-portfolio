            <div id={`line-${index}`}>
                {item.type === "command" && (
                    <div
                        class="ml-2 sm:ml-4 text-sm sm:text-base"
                        style={{ color: "var(--theme-outputText)" }}
                    >
                        {item.text.map((line: string, _: number) => (
                            <div
                                class={`break-words ${
                                    line.startsWith("âŒ")
